{
  "name": "grammy-named-session",
  "version": "0.0.0",
  "description": "grammy-named-session",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "compile": "tsc --noEmit",
    "lint": "eslint --ext .ts .",
    "test": "jest --coverage",
    "test:ci": "jest"
  },
  "repository": "https://github.com/vlad-yakovlev/grammy-named-session.git",
  "keywords": [
    "grammy",
    "telegram",
    "store",
    "storage",
    "session",
    "name"
  ],
  "author": "Vladislav Yakovlev",
  "license": "MIT",
  "bugs": "https://github.com/vlad-yakovlev/grammy-named-session/issues",
  "homepage": "https://github.com/vlad-yakovlev/grammy-named-session#readme",
  "dependencies": {
    "grammy": "^1.13.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.6",
    "@types/node": "16.18.11",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "files": [
    "dist/*"
  ],
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "overrides": [
      {
        "files": "*.test.ts",
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.test\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/{!(constants),}.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
